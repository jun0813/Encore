<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.fastbootmobile.encore.app.ui.TopCropImageView
        android:id="@+id/ivHero"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listen_now_hero_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/albums"
        android:scaleType="centerCrop"
        android:src="@drawable/banner"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/cardSearchBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivHero"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/ebSearch"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_search_gray"
                android:textColor="@color/text_regular"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:hint="@string/ln_header_search_placeholder"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>