<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Design Typography -->
    <style name="FontDisplay4">
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">112sp</item>
        <item name="android:textColor">#8A000000</item>
    </style>

    <style name="FontDisplay3">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#8A000000</item>
    </style>

    <style name="FontDisplay2">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">#8A000000</item>
    </style>

    <style name="FontDisplay1">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#8A000000</item>
    </style>

    <style name="FontHeadline">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#DD000000</item>
    </style>

    <style name="FontTitle">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#DD000000</item>
    </style>

    <style name="FontSubhead">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#DD000000</item>
    </style>

    <style name="FontBody2">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#DD000000</item>
    </style>

    <style name="FontBody1">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#DD000000</item>
    </style>

    <style name="FontCaption">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#8A000000</item>
    </style>

    <style name="FontMenu">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#DD000000</item>
    </style>

    <style name="FontButton">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#DD000000</item>
    </style>

    <style name="FontCardLine1">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#DD000000</item>
    </style>

    <style name="FontCardLine2">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#DD000000</item>
    </style>

    <!-- Roboto Light -->
    <style name="RobotoLightLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/text_regular</item>
    </style>
    <style name="RobotoLightItalicLarge" parent="@style/RobotoLightLarge">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RobotoLightSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="RobotoLightCapsSmall" parent="@style/RobotoLightSmall">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_detail</item>
    </style>
    <style name="RobotoLightCapsSmallBright" parent="@style/RobotoLightCapsSmall">
        <item name="android:textColor">@color/text_detail_emphasize</item>
    </style>

    <!-- Roboto Condensed -->
    <style name="RobotoCondensedLarge" parent="@android:style/TextAppearance.Large">
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
    </style>
    <style name="RobotoCondensedBoldLarge" parent="@style/RobotoCondensedLarge">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RobotoCondensedItalicLarge" parent="@style/RobotoCondensedLarge">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RobotoCondensedSmall" parent="@android:style/TextAppearance.Small">
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
    </style>
    <style name="RobotoCondensedCapsSmall" parent="@style/RobotoCondensedSmall">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="RobotoCondensedCapsBoldSmall" parent="@style/RobotoCondensedCapsSmall">
        <item name="fontPath">fonts/RobotoCondensed-Bold.ttf</item>
    </style>
    <style name="RobotoCondensedItalicSmall" parent="@style/RobotoCondensedSmall">
        <item name="fontPath">fonts/RobotoCondensed-Italic.ttf</item>
    </style>

    <!-- Roboto Regular -->
    <style name="RobotoRegularLarge" parent="@android:style/TextAppearance.Large">
    </style>
    <style name="RobotoRegularBoldLarge" parent="@style/RobotoRegularLarge">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>
</resources>