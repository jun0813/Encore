<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/translucent_toolbarstatus_top_margin"
                tools:context="com.fastbootmobile.encore.app.AutomixActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/ivPoweredEchoNest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lvBuckets"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/lvBuckets"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:contentDescription="@string/automix"
        android:scaleType="fitCenter"
        android:src="@drawable/powered_by_echonest"/>

    <ListView
        android:id="@+id/lvBuckets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivPoweredEchoNest"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/automix_no_buckets"
        android:id="@+id/txtNoBucket"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="italic"
        android:padding="@dimen/activity_horizontal_margin"/>

</RelativeLayout>
